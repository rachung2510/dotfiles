[global]
    monitor = 1
    follow = none
    width = 360
    height = 320
    origin = bottom-right
    offset = 16x16
    idle_threshold = 120

    # Scale factor. It is auto-detected if value is 0.
    scale = 0

    # Maximum number of notification (0 means no limit)
    notification_limit = 3
#    startup_notification = yes

    ### Progress bar ###

    # Turn on the progess bar. It appears when a progress hint is passed with
    # for example dunstify -h int:value:12
    progress_bar = true

    # Set the progress bar height. This includes the frame, so make sure
    # it's at least twice as big as the frame width.
    progress_bar_height = 8
	highlight = "#ddb4e4"

    # Set the frame width of the progress bar
    progress_bar_frame_width = 0

    # Set the minimum width for the progress bar
    progress_bar_min_width = 1

    # Set the maximum width for the progress bar
    progress_bar_max_width = 200
    indicate_hidden = yes

    transparency = 0

    separator_height = 0
    padding = 8
    horizontal_padding = 15
    text_icon_padding = 10

    frame_width = 0
    frame_color = "#8e24aa"
	gap_size = 5
    separator_color = frame

    # Sort messages by urgency.
    sort = yes

    ### Text ###

    font = Fira Sans 12

    line_height = 0
    shrink = yes

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
#    format = "<i>%a</i>\n<b>%s</b>\n%b"
    format = "<b>%s</b>\n%b"

    alignment = left
    vertical_alignment = center

    show_age_threshold = 1000000

    ellipsize = middle

    # Ignore newlines '\n' in notifications.
    ignore_newline = no

    # Stack together notifications with the same content
    stack_duplicates = true

    # Hide the count of stacked notifications with the same content
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A).
    show_indicators = yes

    ### Icons ###

    # Align icons left/right/top/off
    icon_position = left
   
    # Scale small icons up to this size, set to 0 to disable. Helpful
    # for e.g. small files or high-dpi screens. In case of conflict,
    # max_icon_size takes precedence over this.
    min_icon_size = 24

    # Scale larger icons down to this size, set to 0 to disable
    max_icon_size = 50

    # Paths to default icons.
    ### History ###

    # Should a notification popped up from history be sticky or timeout
    # as if it would normally do.
    sticky_history = yes

    # Maximum amount of notifications kept in history
    history_length = 10

    ### Misc/Advanced ###

    # dmenu path.
#	dmenu = /usr/bin/dmenu -p dunst:
    dmenu = /usr/bin/rofi -dmenu -p dunst -theme ~/.config/rofi/dunst.rasi

    # Browser for opening urls in context menu.
    browser = /usr/bin/microsoft-edge

    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true

    title = Dunst
    class = Dunst

    corner_radius = 0
    ignore_dbusclose = false

    force_xwayland = false

    ### Legacy
    force_xinerama = false

    mouse_left_click = context, close_current
    mouse_middle_click = context
    mouse_right_click = close_all

	enable_posix_regex = true

    close = ctrl+space
    close_all = ctrl+shift+space
	context = ctrl+shift+period

[experimental]
    per_monitor_dpi = false


[urgency_low]
	background = "#c37cd0d9"
    foreground = "#fff"
    timeout = 5
    default_icon = ~/.config/dunst/img/noti.png

[urgency_normal]
	background = "#c37cd0d9"
    foreground = "#fff"
    timeout = 10
    default_icon = ~/.config/dunst/img/noti.png
	; script = ~/.config/dunst/scripts/getinfo.sh

[urgency_critical]
    background = "#eb4d4b"
    foreground = "#ffffff"
	timeout = 0
    default_icon = ~/.config/dunst/img/critical.png

[Error]
    summary = "error"
	urgency = "critical"

[Spotify]
    appname=Spotify
    background = "#199949"
    foreground = "#ffffff"
    # format = "<b>ï†¼ %s</b>\n%b"

[Screenshot]
	appname=maim
	icon_position = top
	max_icon_size = 240

[Whatsapp]
	appname = "whatsapp-nativefier-d40211"
	background = "#51b868"

[Volume Mute]
	summary = "Speakers muted"
	highlight = "#cccccc"
	background = "#a6a6a6d9"

[Telegram]
	appname = "Telegram Desktop"
	background = "#41a1d9"
	timeout = 20

