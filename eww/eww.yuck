;; Time
(defpoll time :interval "30s" "date '+\%H:%M'")
(defpoll date :interval "12h" "date '+%a, %d %b %Y'")
(defpoll hour :interval "30s" "date '+%H'")
(defpoll min  :interval "30s" "date '+%M'")

;; Player
(deflisten title   :interval "5h" "scripts/player title")
(deflisten artist  :interval "5h" "scripts/player artist")
(deflisten play-icon :interval "5h" "scripts/player icon")

;; Cava
(deflisten l1  "scripts/cava/getlevel 0" )
(deflisten l2  "scripts/cava/getlevel 1")
(deflisten l3  "scripts/cava/getlevel 2")
(deflisten l4  "scripts/cava/getlevel 3")
(deflisten l5  "scripts/cava/getlevel 4")
(deflisten l6  "scripts/cava/getlevel 5")
(deflisten l7  "scripts/cava/getlevel 6")
(deflisten l8  "scripts/cava/getlevel 7")
(deflisten l9  "scripts/cava/getlevel 8")
(deflisten l10 "scripts/cava/getlevel 9")
(deflisten l11 "scripts/cava/getlevel 10")
(deflisten l12 "scripts/cava/getlevel 11")

;; Sidebar scales
(defpoll volume-val	:interval "5h" :initial "scripts/getval vol" "scripts/getval vol")
(defpoll light-val	:interval "5h"  "scripts/getval light")
(defpoll batt-val	:interval "120s"  "scripts/getval batt")
(defpoll vol-icon	:interval "5h"  "scripts/geticon vol")
(defpoll light-icon	:interval "5h"  "scripts/geticon light")
(defpoll batt-icon	:interval "5s"	"scripts/geticon batt")
(defpoll mute-bool	:interval "5h"  "scripts/getbool mute")

;; Tooltips
(defpoll vol-tooltip	:interval "5s"	"scripts/tooltip vol")
(defpoll batt-tooltip	:interval "5s"	"scripts/tooltip batt")
(defpoll wifi-tooltip	:interval "5s"	"scripts/tooltip wifi")

;; Weather
(defpoll weather-loc  :interval "24h" "scripts/weather location")
(defpoll weather-icon :interval "1h"  "scripts/weather icon")
(defpoll weather-temp :interval "1h"  "scripts/weather temp")
(defpoll weather-cond :interval "1h"  "scripts/weather cond")

;; Stats
(defpoll cpu-val :interval "2s" "scripts/getval cpu")
(defpoll ram-val :interval "2s" "scripts/getval ram")
(defpoll hdd-val :interval "300s" "scripts/getval hdd")
(defpoll hdd-used :interval "300s" "scripts/getval hdd used")
(defpoll hdd-avail :interval "300s" "scripts/getval hdd avail")

;; Quickbuttons
(defpoll wifi-icon		:interval "5s" "scripts/geticon wifi")
(defpoll wifi-bool		:interval "5h" "scripts/getbool wifi")
(defpoll bluetooth-bool :interval "5h" "scripts/getbool bluetooth")
(defpoll notif-bool		:interval "5h" "scripts/getbool notif")

;; Workspace
(deflisten workspace "scripts/workspace")
(deflisten ws-mode "scripts/wsmode")
(deflisten ws-scratch "scripts/workspace scratch")
(defpoll lang-val :interval "2s" "scripts/getval lang")

(include "./yuck/method.yuck")
(include "./yuck/sidebar.yuck")
(include "./yuck/bar.yuck")
