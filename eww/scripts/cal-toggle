ESC=9
RETURN=36

close() {
	eww close cal
	pkill -f cal-toggle
}

if [[ "$(eww windows)" = *"*cal"* ]]; then
	close
else
	eww open cal
	xinput test-xi2 --root 3 | grep -A2 --line-buffered RawKeyRelease | while read -r line; do
	    if [[ $line == *"detail"* ]]; then
	        key=$( echo $line | sed "s/[^0-9]*//g")
			if [[ $key = $ESC ]] || [[ $key = $RETURN ]]; then close; fi
		fi
	done
fi

# vim: set ft=sh :
