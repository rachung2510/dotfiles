(defwidget cal []
	(box :orientation "v" :width 240 :valign "end"
		(box :class "calbox"
		(calendar 
			:show-day-names "true"
			:show-heading "true"
			:day {formattime(EWW_TIME, '%d')}
			:month {formattime(EWW_TIME, '%-m')}
			:year {formattime(EWW_TIME, '%Y')}
		))
))

;; Window
(defwindow cal
	:windowtype "dock"
	:geometry (geometry :x "52px" 
						:y "0" 
						:height "0%"
						:anchor "bottom left")
	:monitor 0
	:stacking "bg"
	:wm-ignore "true"
	(cal)
)
