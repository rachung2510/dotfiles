/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @al;
    text-color:             @fga;
	font:				 	"FiraCode Nerd Font 11";
}

window {
    width:      			400px;
    padding:    			25px;
    border:					0px 0px 0px 4px;
    border-radius:          0px;
    border-color:           @bg2;
    location:               center;
    y-offset:               -2em;
    background-color:       @bg;
}

entry {
    expand: 				true;
    text-color:				@bg2;
}
