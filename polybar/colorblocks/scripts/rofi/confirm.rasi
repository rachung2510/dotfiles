/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @al;
    text-color:             @fga;
	font:				 	"FiraCode Nerd Font 11";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					0px 0px 0px 4px;
    border-radius:          0px;
    border-color:           @bg2;
    location:               center;
	background-color:		@bg;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@bg2;
}
