bindsym $mod+e exec --no-startup-id nemo
# bindsym Print exec scrot ~/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved to ~/$(date +"%Y-%m-%d-%T")-screenshot.png"

# Custom keybinds for scripts
bindsym $mod+period exec --no-startup-id ~/.config/i3/scripts/theme
bindsym $mod+m exec --no-startup-id ~/.config/i3/scripts/eww_controller sidebar
bindsym $mod+b exec --no-startup-id ~/.config/i3/scripts/eww_controller bar
