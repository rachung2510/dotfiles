exec_always --no-startup-id xinput set-prop "SYNA7DAB:00 06CB:CD40 Touchpad" "libinput Natural Scrolling Enabled" 1
exec_always --no-startup-id autotiling -e BINDING
exec --no-startup-id i3-msg 'workspace $ws1'
